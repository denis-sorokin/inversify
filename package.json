{
    "name": "learn_inversify",
    "version": "0.0.1",
    "private": true,
    "scripts": {
        "build": "npm run clean && npm run lint && echo Using TypeScript && tsc --version && tsc --pretty && cp .env dist/.env",
        "clean": "/bin/rm -rf ./dist",
        "lint": "tslint --force --format verbose \"src/**/*.ts\"",
        "start": "npm run build && npm run serve",
        "start:dev": "npm run build && npm run serve:dev",
        "serve": ". ./.env & node ./dist/index.js",
        "serve:debug": "set DEBUG=app* && node ./dist/index.js",
        "serve:pm2": "pm2 start pm2.json",
        "serve:pm2-runtime": "pm2-runtime start pm2.json",
        "serve:dev": "set DEBUG=* && nodemon --inspect ./dist/index.js",
        "stop": "pm2 stop all",
        "test": "set NODE_ENV=test&&set DEBUG=app*&&mocha --timeout 999999 --recursive dist/tests/",
        "test:ts": "set NODE_ENV=test&&set DEBUG=app*&&mocha --timeout 999999 --require ts-node/register src/tests/**/*.test.ts",
        "watch": "npm run build -- --watch"
    },
    "dependencies": {
        "body-parser": "^1.18.3",
        "debug": "^4.1.0",
        "express": "^4.16.4",
        "inversify": "^5.0.1",
        "inversify-express-utils": "^6.2.0",
        "lodash": "^4.17.11",
        "mocha": "^5.2.0",
        "morgan": "^1.9.1",
        "nodemon": "^1.18.6",
        "pm2": "^3.2.2",
        "reflect-metadata": "^0.1.12",
        "supertest": "^3.3.0",
        "ts-node": "^7.0.1",
        "tslint": "^5.11.0",
        "typescript": "^3.1.6"
    },
    "devDependencies": {
        "@types/debug": "^0.0.31",
        "@types/expect": "^1.20.3",
        "@types/express": "^4.16.0",
        "@types/mocha": "^5.2.5",
        "@types/morgan": "^1.7.35",
        "@types/node": "^10.12.6",
        "@types/supertest": "^2.0.6"
    }
}
